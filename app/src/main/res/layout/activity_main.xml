<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_valueA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Value of A"
        />
    <EditText
        android:id="@+id/editText_valueB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Value of B"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#166549"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_marginRight="5dp"
        android:onClick="calculator"/>

    <Button
        android:id="@+id/button_sub"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#164f65"
        android:layout_height="wrap_content"
        android:text="Sub"
        android:layout_marginRight="5dp"
        android:onClick="calculator"/>

    <Button
        android:id="@+id/button_mul"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#652616"
        android:layout_height="wrap_content"
        android:text="Mul"
        android:layout_marginRight="5dp"
        android:onClick="calculator"/>
    <Button
        android:id="@+id/button_div"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#651655"
        android:layout_height="wrap_content"
        android:text="Div"
        android:layout_marginRight="5dp"
        android:onClick="calculator"/>



    ></LinearLayout>




    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />
</LinearLayout>
